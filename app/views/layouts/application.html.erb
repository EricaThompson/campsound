<!DOCTYPE html>
<html>
  <head>
    <title>CampSound</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <% if current_user %>
    <script>
      window.currentUser = {
        "id": <%= current_user.id %>,
        "username": "<%= current_user.username %>"
      };
    </script>
    <% end %>
  </head>

  <body>
    <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <li> <%= error %> </li>
    <% end %>
  <% end %>
    <%= yield %>
  </body>
</html>
